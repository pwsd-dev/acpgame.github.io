mixin item(img,date,name)
    .page-item
        .page__img
            img(src=img, alt="")
            div.nav
                a.page__link(href="../gallery/gallery.html") Смотреть фотоальбом
                .page__link.open-modal( data-modal="modal-gallery") Быстрый просмотр
        .page__text.date=date
        .page__text.value=name
        .page-item_bg
        

.wrapper
    include ../blocks/shared/on-main-yellow
    h1.page__title-h1.page__title-h1_text-shadow_white
                span смотрите <br>
                span как ЭМОЦИОНАЛЬНО
    .page-nav
        button.page__btn.page__btn_gray-yellow.is-active Наши игры
        button.page__btn.page__btn_gray-yellow Битва Корпораций
    .page-nav
        button.page__btn.page__btn_gray-yellow Москва
        button.page__btn.page__btn_gray-yellow Санкт-Петербург
        button.page__btn.page__btn_gray-yellow Екатеринбург
        button.page__btn.page__btn_gray-yellow Алматы
        button.page__btn.page__btn_gray-yellow Нур-Султан
        button.page__btn.page__btn_gray-yellow.is-active Ереван
        button.page__btn.page__btn_gray-yellow Ташкент
    .page-content
       
        #sliderGallery.page-items
            +item("assets/img/img-gallery-1.png",'15 ОКТ 2020','Угадать за 60 секунд')
            +item("assets/img/img-gallery-2.png",'15 ОКТ 2020','Угадать за 60 секунд')
            +item("assets/img/img-gallery-2.png",'15 ОКТ 2020','Угадать за 60 секунд')
            +item("assets/img/img-gallery-1.png",'15 ОКТ 2020','Угадать за 60 секунд')
            +item("assets/img/img-gallery-2.png",'15 ОКТ 2020','Угадать за 60 секунд')
            +item("assets/img/img-gallery-2.png",'15 ОКТ 2020','Угадать за 60 секунд')
        .slider.page-nav
            .slider__actions
                button.page__btn_prev(data-controls="prev")
                button.page__btn_next(data-controls="next")
