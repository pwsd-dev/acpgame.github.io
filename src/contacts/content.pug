mixin item(city, name, eMail, tel1, tel2 )
    .contacts-block-container-item
        .contacts-block-container-item__description_city
            p.page__text= city 
        .contacts-block-container-item__description_name
            p.page__text= name
        .contacts-block-container-item__description_e-mail
            p.page__text= eMail
        .contacts-block-container-item__description_phone-dom
            p.page__text= tel1
        .contacts-block-container-item__description_phone-mob
            p.page__text= tel2

section.contacts
    .wrapper
        include ../blocks/shared/on-main
        .contacts-block
            h1.page__title-h1.page__title-h1_text-shadow_gray
                span наши <br>
                span контакты
            .contacts-block-container
                +item('Москва','Мария Жачева')
                +item()
                +item()
                +item()
                +item()
                
                    
                
            