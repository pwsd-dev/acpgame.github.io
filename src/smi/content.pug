mixin item()
    .smi-block-container
        .smi-block-container-item
            .smi-block-container__video
                video.page__img(poster="assets/img/img-video-page.png" src="")
                .smi-block-container__video-description
                    p.page__text.page__text_yellow.date 23 ДЕК 2019
                    p.page__text.page__text_white.name Видео репортаж на телеканале Россия 24
            .smi-block-container__article
                img.page__img(src="assets/img/img-smi-article.png")
                p.page__text 5 НОЯ 2018
                p.page__text Статья в журнале РБК

.wrapper
    include ../blocks/shared/on-main-yellow
       
    h1.page__title-h1.page__title-h1_text-shadow_gray.page__title-h1_text-shadow_gray-yellow
        span о нас <br>
        span в сми
    .page-nav
        .page-btn
            button.page__btn.page__btn_gray-yellow Все 
        .page-btn
            button.page__btn.page__btn_gray-yellow Видео
        .page-btn
            button.page__btn.page__btn_gray-yellow Статья
        .page-btn
            button.page__btn.page__btn_gray-yellow Интервью
    
    #sliderSmi.page-items
            +item()
            +item()
    .slider.sliderSmi.page-nav
            .slider__actions
                button.page__btn_prev(data-controls="prev")
                button.page__btn_next(data-controls="next")
            .page-nav
                .page-nav__number.active 01
                .page-nav__number 02

include ../blocks/mixins/mixin-next-section
+nextSection('Следующий раздел', 'контакты', '../')